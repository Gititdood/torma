extends ./layout.jade

block content
  if(!user)
    h1 Hello World!
    a(href='/login') Please login
  else
    h1 Hello, #{user.username}
    h2 Dynamic content
    button(ng-click='loadData()') load data
    table(ng-if='data')
      tr
        th Key
        th Value
      tr(ng-repeat='(key, value) in data')
        td {{key}}
        td {{value}}

